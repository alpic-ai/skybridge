{
  "name": "apps-sdk-template",
  "version": "0.0.1",
  "private": true,
  "description": "Alpic MCP Server Template",
  "type": "module",
  "packageManager": "pnpm@10.18.3",
  "scripts": {
    "dev": "nodemon",
    "build": "pnpm web:build && rm -rf server/dist && tsc -p server/tsconfig.json && cp -r web/dist server/dist/assets",
    "start": "node server/dist/index.js",
    "inspector": "mcp-inspector http://localhost:3000/mcp",
    "server:build": "tsc -p server/tsconfig.json",
    "server:start": "node server/dist/index.js",
    "web:build": "pnpm --filter @apps-sdk-template/web build",
    "web:preview": "pnpm --filter @apps-sdk-template/web preview"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "express": "^5.1.0",
    "skybridge": "catalog:",
    "vite": "^7.1.11",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.17.5",
    "@types/express": "^5.0.3",
    "@types/node": "^22.15.30",
    "nodemon": "^3.1.10",
    "tsx": "^4.19.4",
    "typescript": "^5.7.2"
  }
}
