{
  "name": "skybridge",
  "version": "0.0.0",
  "description": "Skybridge is a framework for building ChatGPT apps",
  "repository": {
    "type": "git",
    "url": "https://github.com/alpic-ai/skybridge.git"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    "./server": {
      "types": "./dist/src/server/index.d.ts",
      "default": "./dist/src/server/index.js"
    },
    "./web": {
      "types": "./dist/src/web/index.d.ts",
      "default": "./dist/src/web/index.js"
    }
  },
  "scripts": {
    "build": "tsc && pnpm run build:templates",
    "build:templates": "cp -r src/server/templates dist/src/server/",
    "format": "biome check --write --error-on-warnings",
    "test": "pnpm run test:unit && pnpm run test:type && pnpm run test:format",
    "test:unit": "vitest run",
    "test:type": "tsc --noEmit",
    "test:format": "biome ci"
  },
  "keywords": [
    "chatgpt",
    "app",
    "ai",
    "skybridge"
  ],
  "author": "Frédéric Barthelet",
  "license": "ISC",
  "peerDependencies": {
    "@modelcontextprotocol/sdk": ">=1.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "@babel/core": "^7.28.5",
    "cors": "^2.8.5",
    "dequal": "^2.0.3",
    "express": "^5.2.1",
    "handlebars": "^4.7.8",
    "superjson": "^2.2.6",
    "vite": "^7.3.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@modelcontextprotocol/ext-apps": "^0.2.2",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.1",
    "@total-typescript/tsconfig": "^1.0.4",
    "@types/babel__core": "^7.20.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^22.19.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitest/ui": "^4.0.16",
    "jsdom": "^27.4.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "zod": "^4.3.5"
  },
  "packageManager": "pnpm@10.27.0"
}
