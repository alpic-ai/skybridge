{
  "name": "skybridge/monorepo",
  "version": "0.0.0",
  "description": "Skybridge is a framework for building ChatGPT apps",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc && pnpm run build:templates",
    "build:templates": "cp -r src/server/templates dist/src/server/",
    "format": "biome check --write --error-on-warnings",
    "test": "pnpm run test:unit && pnpm run test:type && pnpm run test:format",
    "test:unit": "vitest run",
    "test:type": "tsc --noEmit",
    "test:format": "biome ci",
    "docs:dev": "pnpm --filter @skybridge/docs start",
    "docs:build": "pnpm --filter @skybridge/docs build",
    "docs:serve": "pnpm --filter @skybridge/docs serve"
  },
  "keywords": [
    "chatgpt",
    "app",
    "ai",
    "skybridge"
  ],
  "author": "Frédéric Barthelet",
  "license": "ISC",
  "dependencies": {
    "@babel/core": "^7.28.5",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "handlebars": "^4.7.8",
    "superjson": "^2.2.6",
    "vite": "^7.1.11",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@total-typescript/tsconfig": "^1.0.4",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.17.1"
}
